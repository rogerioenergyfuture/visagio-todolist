<%= form_with(model: job) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select(:status, Job.statuses.keys.map {|status| [status.titleize,status]},{include_blank: false}, :class => 'form-control' )%>
  </div>

  <div class="field">
    <%= form.label :todolist %>
        <div class="select">
      <%= form.collection_select(:todo_id, @todos, :id, :name,{include_blank: false}, { :class => 'form-control' })%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
